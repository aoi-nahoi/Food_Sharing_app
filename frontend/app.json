{
  "expo": {
    "name": "フードロス削減アプリ",
    "slug": "food-loss-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.foodloss.app"
    },
    "android": {
      "package": "com.foodloss.app"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "このアプリは位置情報を使用して近くのお店を検索します。"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "このアプリは写真を撮影して食品を掲載するためにカメラへのアクセスが必要です。"
        }
      ]
    ],
    "platforms": ["ios", "android", "web"]
  }
}
